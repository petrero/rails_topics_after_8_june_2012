<ul id="menu">
	<% Page.roots.each do |page| %>
		<li><%= link_to page.name, page, class: ("active" if @page.root == page) %></li>
	<% end %>
</ul>

<div id="submenu"><%= render 'submenu_pages', pages: @page.root.descendants.arrange %></div>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @page.name %>
</p>

<p>
  <b>Content:</b>
  <%= @page.content %>
</p>

<p>
  <b>Ancestry:</b>
  <%= @page.ancestry %>
</p>


<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %>
